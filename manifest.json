{
  "manifest_version": 3,
  "name": "Hide YouTube Shorts",
  "version": "1.0.0",
  "description": "Hides YouTube Shorts/Reels across YouTube.",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
